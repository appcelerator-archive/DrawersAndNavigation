<Alloy>

	<!-- iPad, uses a splitWindow -->
	<SplitWindow platform="ios" formFactor="tablet">
		<Window id="drawer" />
		<NavigationWindow id="detailWindow">
			<Widget src="com.capnajax.navigation" name="page" id="first" />
		</NavigationWindow>
	</SplitWindow>

	<!-- iPhone, uses a standard navigationWindow -->	
	<NavigationWindow id="widget" platform="ios" formFactor="handheld">
		<Widget src="com.capnajax.navigation" name="page" id="first" />
	</NavigationWindow>

	<!-- Android -->
	<Window platform="android" exitOnClose="false">
        <Menu id="menu" platform="android" >
            <MenuItem id="item1" title="Menu" />
        </Menu>
		<ScrollableView id="navigation"/>
		<View id="drawer" />		
	</Window>

</Alloy>
